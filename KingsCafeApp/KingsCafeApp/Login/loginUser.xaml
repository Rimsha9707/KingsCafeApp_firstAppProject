<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KingsCafeApp.Login.loginUser"
             Title="Login"
             >
    <ContentPage.Content >
        <StackLayout Padding="34" VerticalOptions="CenterAndExpand">
            <Entry Keyboard="Email" x:Name="txtEmail" Placeholder="Email..."/>
            <Entry IsPassword="True" x:Name="txtPassword" Placeholder="Password..."/>
            <Button Text="Login" Clicked="Button_Clicked"/>
            <Label Text="SignUp now" >
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>